@model IEnumerable<Domain.Models.MenuItem>

@{
    ViewData["Title"] = "Pending Menu Items";
    var restaurantId = (int)ViewBag.RestaurantId;
}

<h1>Pending Menu Items</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}

@if (!Model.Any())
{
    <p>No pending menu items for this restaurant.</p>
}
else
{
    <form asp-action="ApproveMenuItems" method="post">
        <input type="hidden" name="restaurantId" value="@restaurantId" />

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Select</th>
                    <th>Title</th>
                    <th>Price</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox"
                                   name="selectedMenuItemIds"
                                   value="@item.Id" />
                        </td>
                        <td>@item.Title</td>
                        <td>@item.Price @item.Currency</td>
                        <td>@item.Status</td>
                    </tr>
                }
            </tbody>
        </table>

        <button type="submit" class="btn btn-success">Approve Selected</button>
    </form>
}
