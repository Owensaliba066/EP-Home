@using Domain.Interfaces
@using Domain.Models
@model IEnumerable<IItemValidating>

@{
    ViewData["Title"] = "Bulk Import – Preview";
}

<h1>Bulk Import – Preview</h1>

<p>
    Parsed @Model.Count() item(s) from the uploaded JSON file.
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Type</th>
            <th>Validators</th>
            <th>Partial</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string typeName;
            string partialName;

            if (item is Restaurant)
            {
                typeName = "Restaurant";
                partialName = "_RestaurantCard";
            }
            else if (item is MenuItem)
            {
                typeName = "MenuItem";
                partialName = "_MenuItemCard";
            }
            else
            {
                typeName = item.GetType().Name;
                partialName = "N/A";
            }

            // In the class demo, a fixed validator email is used
            string validatorEmail = "siteadmin@example.com";

            <tr>
                <td>@typeName</td>
                <td>@validatorEmail</td>
                <td>@partialName</td>
            </tr>
        }
    </tbody>
</table>

<hr />

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">
        @TempData["Message"]
    </div>
}

<!-- Back to upload -->
<form asp-action="Upload" asp-controller="BulkImport" method="get" class="mb-2">
    <button type="submit" class="btn btn-secondary">Back to Upload</button>
</form>

<!-- Download template ZIP -->
<form asp-action="DownloadImagesTemplate" asp-controller="BulkImport" method="get" class="mb-2">
    <button type="submit" class="btn btn-info">Download image template ZIP</button>
</form>

<!-- Commit items + optional images ZIP -->
<form asp-action="Commit"
      asp-controller="BulkImport"
      method="post"
      enctype="multipart/form-data"
      class="mb-2">

    <div class="mb-3">
        <label for="imagesZip" class="form-label">Images ZIP (optional)</label>
        <input type="file"
               class="form-control"
               id="imagesZip"
               name="imagesZip"
               accept=".zip" />
        <small class="form-text text-muted">
            Use the downloaded template ZIP, replace <code>default.jpg</code> in each folder with
            your image, then upload the ZIP here before committing.
        </small>
    </div>

    <button type="submit" class="btn btn-success">Commit to Database</button>
</form>
