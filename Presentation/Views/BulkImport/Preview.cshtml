@using Domain.Interfaces
@model IEnumerable<IItemValidating>

@{
    ViewData["Title"] = "Bulk Import – Preview";
}

<h1>Bulk Import – Preview</h1>

<p>
    Parsed @Model.Count() item(s) from the uploaded JSON file.
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Type</th>
            <th>Validator(s)</th>
            <th>Partial View</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string typeName = item.GetType().Name;
            string validatorEmails = string.Join(", ", item.GetValidators());
            string partialName = item.GetCardPartial();

            <tr>
                <td>@typeName</td>
                <td>@validatorEmails</td>
                <td>@partialName</td>
            </tr>
        }
    </tbody>
</table>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">
        @TempData["Message"]
    </div>
}

<hr />

<h2>Images</h2>

<p>
    You can optionally provide images for each item using a ZIP file.
</p>

<p>
    <a asp-action="DownloadImagesTemplate" class="btn btn-secondary">
        Download Images Template ZIP
    </a>
</p>

<form asp-action="Commit" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="imagesZip" class="form-label">Images ZIP (optional)</label>
        <input type="file"
               class="form-control"
               id="imagesZip"
               name="imagesZip"
               accept=".zip" />
        <small class="form-text text-muted">
            Use the downloaded template ZIP, replace <code>default.jpg</code> in each folder with
            your image, then upload the ZIP here before committing.
        </small>
    </div>

    <button type="submit" class="btn btn-success">Commit to Database</button>
</form>
