@{
    ViewData["Title"] = "Bulk Import - Upload";
}

<h1>Bulk Import – Upload JSON</h1>

<form asp-action="Upload" asp-controller="BulkImport" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="jsonFile">JSON file</label>
        <input type="file" name="jsonFile" id="jsonFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Upload &amp; Preview</button>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div class="text-danger mt-3">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@error.ErrorMessage</div>
        }
    </div>
}
